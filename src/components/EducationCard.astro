---
const { title, place, year } = Astro.props;
import Degree from "../assets/svg/degree.svg";
import Student from "../assets/svg/student.svg";
import Date from "../assets/svg/date.svg";
---

<div class="flex flex-row">
  <div
    class="line basis-[5%] lg:basis-[15%] 2xl:basis-[20%] -translate-x-[2px]"
  >
  </div>
  <div
    id="educationCard"
    class="basis-[95%] lg:basis-[85%] 2xl:basis-[60%] min-w-[320px] md:min-w-[400px] lg:min-w-[600px] h-fit flex flex-col gap-2 bg-[var(--secondary-bg)] text-white p-6 border border-l-[var(--primary-color)] border-l-4 border-r-0 border-t-0 border-b-0"
  >
    <div class="flex flex-row gap-x-2">
      <div class="translate-y-[2px] lg:translate-y-[3px]">
        <Degree class="size-[1.2rem]" />
      </div>
      <h3 class="text-sm lg:text-base xl:text-base">{title}</h3>
    </div>
    <div class="flex flex-row gap-x-2">
      <div class="translate-y-[3px] lg:translate-y-[5px]">
        <Student class="size-[1.2rem] text-white scale-[1.2]" />
      </div>
      <h2 class="text-xl lg:text-xl xl:text-2xl text-[var(--primary-color)]">
        {place}
      </h2>
    </div>
    <div class="flex flex-row gap-x-2 items-center">
      <Date class="size-[1.2rem]" />
      <p class="text-sm lg:text-base xl:text-base text-[#ccc]">{year}</p>
    </div>
  </div>
  <div class="hidden 2xl:block basis-[20%]"></div>
</div>

<style>
  .line::before {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    width: 100%;
    height: 3px;
    background-color: var(--primary-color);
    transform: translateX(2px) translateY(-50%);
  }
  .line::after {
    content: "";
    position: absolute;
    top: 50%;
    border-radius: 100%;
    width: 13px;
    height: 13px;
    background-color: var(--primary-color);
    transform: translateX(-50%) translateY(-50%);
  }
</style>
