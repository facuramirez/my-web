  <section
    class="basis-full w-full lg:basis-1/2 order-1 lg:order-2 mix-blend-lighten"
  >
    <Image
      src={Facu}
      alt="Facu"
      class="facuImg min-w-[10rem] w-[75%] max-w-[30rem] lg:min-w-[25rem] lg:w-[75%] lg:max-w-[50rem] mx-auto"
